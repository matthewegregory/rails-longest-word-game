<h1>New game</h1>
<div class="row">
<% @letters.each do |letter| %>
  <div class="letter m-1 p-2 bg-primary col-1 text-center"><%= letter.upcase %></div>
<% end %>
</div>
<p>What is the longest word you can find?</p>
<form action="score" method="post" data-turbo="false">
  <input type="text" name="word" class="">
  <input type="submit" value="Play" class="btn btn-primary col-3" type="button">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input id="letters" name="letters" type="hidden" value="<%= @letters.join %>" />
</form>
